    </div> 
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://threejs.org/examples/js/postprocessing/EffectComposer.js"></script>
    <script src="https://threejs.org/examples/js/postprocessing/RenderPass.js"></script>
    <script src="https://threejs.org/examples/js/postprocessing/ShaderPass.js"></script>
    <script src="https://threejs.org/examples/js/shaders/CopyShader.js"></script>

    <script>
        const pageContentWrapper = document.getElementById('page-content-wrapper');
        const globalLoaderContainer = document.getElementById('global-loader-container');
        const globalCounterElement = document.getElementById('global-counter');
        
        let pageScene, pageCamera, pageRenderer;
        let pageObjects = [];
        
        // --- 1. UI TOGGLE LOGIC (Brand Kits) ---

        const brandKits = document.querySelectorAll('.brand-kit-item');
        const checkmarkSVG = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M4 12l6 6 10-12"></path></svg>';

        function initializeBrandKits() {
            brandKits.forEach(kit => {
                if (kit.classList.contains('active')) {
                    const activeCheckbox = kit.querySelector('.checkbox-container');
                    activeCheckbox.innerHTML = checkmarkSVG;
                }
                kit.addEventListener('click', () => {
                    brandKits.forEach(k => {
                        k.classList.remove('active');
                        const checkbox = k.querySelector('.checkbox-container');
                        checkbox.innerHTML = '';
                        checkbox.classList.remove('bg-indigo-500', 'border-indigo-500');
                        checkbox.classList.add('border-gray-600');
                    });
                    kit.classList.add('active');
                    const activeCheckbox = kit.querySelector('.checkbox-container');
                    activeCheckbox.classList.add('bg-indigo-500', 'border-indigo-500');
                    activeCheckbox.classList.remove('border-gray-600');
                    activeCheckbox.innerHTML = checkmarkSVG;
                });
            });
        }
        
        // --- 2. BSS/OSS TABS LOGIC ---

        function setupBssTabs() {
            const tabButtons = document.querySelectorAll('.tab-button-bss');
            const tabContents = document.querySelectorAll('.tab-content-bss');
            const contentArea = document.querySelector('.content-area-bss');

            function setContentAreaHeight(targetId) {
                const targetContent = document.getElementById(targetId);
                if (targetContent) {
                    contentArea.style.height = 'auto'; 
                    setTimeout(() => {
                        contentArea.style.height = `${targetContent.offsetHeight}px`;
                    }, 50); 
                }
            }
            
            const initialActiveTab = document.querySelector('.tab-button-bss.active');
            if (initialActiveTab) {
                setContentAreaHeight(initialActiveTab.getAttribute('data-tab'));
            }

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const targetTab = button.getAttribute('data-tab');
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabContents.forEach(content => content.classList.remove('active'));
                    button.classList.add('active');
                    const activeContent = document.getElementById(targetTab);
                    if (activeContent) {
                        activeContent.classList.add('active');
                        setContentAreaHeight(targetTab);
                    }
                });
            });
            
            window.addEventListener('resize', () => {
                const currentActiveTab = document.querySelector('.tab-content-bss.active');
                if (currentActiveTab && contentArea) {
                    contentArea.style.height = 'auto'; 
                    setTimeout(() => {
                        contentArea.style.height = `${currentActiveTab.offsetHeight}px`;
                    }, 50);
                }
            });
        }

        // --- 3. GLOBAL LOADER LOGIC (Initial Page Load) ---

        function startGlobalLoadingSequence() {
            const progressFillLeft = document.getElementById('global-progress-fill-left');
            const progressFillRight = document.getElementById('global-progress-fill-right');
            const totalDuration = 2000;

            let progress = 0;
            const counterInterval = setInterval(() => {
                if (progress < 100) {
                    progress += 1;
                    globalCounterElement.textContent = progress.toString().padStart(3, '0');
                } else {
                    clearInterval(counterInterval);
                }
            }, totalDuration / 100);

            setTimeout(() => { progressFillLeft.style.width = '100%'; }, 100);
            setTimeout(() => { progressFillRight.style.width = '100%'; }, 100 + totalDuration / 2);

            setTimeout(() => {
                globalLoaderContainer.classList.add('loaded');
            }, totalDuration + 100);

            setTimeout(() => {
                globalLoaderContainer.classList.add('hidden');
                globalCounterElement.style.display = 'none';
                pageContentWrapper.classList.add('visible'); 
                
                setupBssTabs(); 
                initPage3DBackground();
                animatePage3DBackground();

            }, totalDuration + 100 + 700);
        }

        // --- 4. PAGE BACKGROUND ANIMATION LOGIC ---

        function initPage3DBackground() {
            const container = document.getElementById('three-canvas-container');
            // Check if renderer already exists to prevent duplication
            if (container.children.length > 0) return; 

            pageScene = new THREE.Scene();
            pageScene.background = new THREE.Color(0x111111);
            pageCamera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 0.1, 1000);
            pageCamera.position.z = 20;
            pageRenderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
            pageRenderer.setSize(window.innerWidth, window.innerHeight);
            container.appendChild(pageRenderer.domElement);
            
            const ambientLight = new THREE.AmbientLight(0x404040, 5);
            pageScene.add(ambientLight);
            const pointLight = new THREE.PointLight(0xffffff, 2);
            pointLight.position.set(20, 20, 20);
            pageScene.add(pointLight);

            const geometry = new THREE.BoxGeometry(10, 10, 10);
            const material = new THREE.MeshBasicMaterial({ color: 0x4a90e2, wireframe: true });
            const mesh = new THREE.Mesh(geometry, material);
            pageScene.add(mesh);
            pageObjects.push(mesh);
        }

        function animatePage3DBackground() {
            if (!pageScene || !pageRenderer) return;
            window.requestAnimationFrame(animatePage3DBackground);
            pageObjects.forEach(mesh => {
                mesh.rotation.x += 0.005;
                mesh.rotation.y += 0.005;
            });
            pageRenderer.render(pageScene, pageCamera);
        }

        // --- 5. INITIALIZATION ---
        document.addEventListener('DOMContentLoaded', () => {
            initializeBrandKits();
            startGlobalLoadingSequence();
        });
    </script>
</body>
</html>
